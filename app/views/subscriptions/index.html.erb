<div class="container">
  <div class="row header">
    <div class="col-md-12">
      
      <h2>My Subscription</h2>
      
      <h3><%= current_user.subscription.blank? ? "New" : "Change" %> subscription</h3>
      
      <%= render 'subscriptions/stripe_form' %>
      
      <h3>Payment history</h3>
      
      <table>
        <thead>
          <tr>
            <th>start_date</th>
            <th>end_date</th>
            <th>plan</th>
            <th>amount</th>
          </tr>
        </thead>
        
        <tbody>
          <% @subscriptions.each do |subscription| %>
          <tr>
            <td><%= subscription.start_date %></td>
            <td><%= subscription.end_date %></td>
            <td><%= subscription.plan.name %></td>
            <td><%= subscription.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>