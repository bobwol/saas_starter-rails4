<div class="already-account">

<%- if controller_name != 'sessions' %>
  Already have an account? <%= link_to 'Sign in here', new_user_session_path %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  Don't have an account? <%= link_to 'Sign up here', new_user_registration_path %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  Didn't receive confirmation instructions? <%= link_to "Resend confirmation here", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  Didn't receive unlock instructions? <%= link_to "Resend unlock here", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    Sign in with <%= link_to "#{provider.to_s.titleize} here", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
  
</div>
  