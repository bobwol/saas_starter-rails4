<%= content_for :title, 'Login' %>
<%= content_for :body_id, 'signup' %>

    <h4>Sign in to your account.</h4>
  </div>
</header>
<div class="row">
  <div class="col-md-12">
    <div class="wrapper clearfix">
      <div class="formy">
        <div class="row">
          <div class="col-md-12">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control', autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.label :password %>
                <%= link_to "(Forgot password?)", new_password_path(resource_name), class: 'right' %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="checkbox">
                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                </div>
              <% end -%>
    <%= f.submit 'Sign in to my account', :class => 'button' %>
            <% end %>
          </div>
        </div>						
      </div>
    </div>
    <div class="already-account">
      Don't have an account?
      <%= link_to 'Sign up here', new_user_registration_path %>
    </div>
  