<div id="cta">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="form-wrapper">
          <h4>Try our one month free trial, sign up today! No commitments, no hassle, just relief.</h4>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-inline', role: 'form'}) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation' %>
            </div>
            <button type="submit" class="button button-small">Sign Up</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
